{
  "manifest_version": 3,
  "name": "Format Japanese Dates",
  "version": "1.0",
  "description": "Replaces Japanese Imperial Calendar dates. Icon designed by Freepik.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
